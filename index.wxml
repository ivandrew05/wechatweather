<!--index.wxml-->

<view class="container">

  <scroll-view scroll-y='true' style='height:{{scrollHeight}}rpx'>

    <image class='background' src="/images/background/02.jpg" mode="aspectFill"></image>

    <view class="location">{{location}}</view>

    <view class="today">今天 {{currentDate}}</view>

    <view class="todayInfo">
      <view class="weatherIcon">
        <image src='{{currentWeatherIconDay}}' mode="aspectFit"></image>
        <image src='{{currentWeatherIconNight}}' mode="aspectFit"></image>
      </view>
      <view class="weatherinfo">
        <view class="temperature">{{currentTemperature}}</view>
        <view class="description">{{currentDescription}}</view>
        <view class="wind">{{currentWind}}</view>
        <view class='air' style="background-color:{{currentAirColor}}" bindtap="pmTap">{{currentPm25}} {{currentAirClass}}</view>
      </view>
    </view>

    <view class="forecastList">
      <view class="weatherDate">{{weatherDate1}}</view>
      <view class="weatherIconX">
        <image src='{{weatherIcon1Day}}' style='height:140rpx;width:140rpx;'></image>
        <image src='{{weatherIcon1Night}}' style='height:140rpx;width:140rpx;'></image>
      </view>
      <view class="descriptionX">{{description1}}</view>
      <view class="temperatureX">{{temperature1}}</view>
    </view>

    <view class="forecastList">
      <view class="weatherDate">{{weatherDate2}}</view>
      <view class="weatherIconX">
        <image src='{{weatherIcon2Day}}' style='height:140rpx;width:140rpx;'></image>
        <image src='{{weatherIcon2Night}}' style='height:140rpx;width:140rpx;'></image>
      </view>
      <view class="descriptionX">{{description2}}</view>
      <view class="temperatureX">{{temperature2}}</view>
    </view>

    <view class="forecastList">
      <view class="weatherDate">{{weatherDate3}}</view>
      <view class="weatherIconX">
        <image src='{{weatherIcon3Day}}' style='height:140rpx;width:140rpx;'></image>
        <image src='{{weatherIcon3Night}}' style='height:140rpx;width:140rpx;'></image>
      </view>
      <view class="descriptionX">{{description3}}</view>
      <view class="temperatureX">{{temperature3}}</view>
    </view>

  <block wx:for="{{livingIndexArray}}" wx:for-item="item" wx:key="key">
    <view class="horizontalLine"></view>
    <view class="livingIndexTitle">
      {{item.title}}
    </view>
    <view class="livingIndexText">
      {{item.des}}
    </view>
   </block>

  </scroll-view>
</view>